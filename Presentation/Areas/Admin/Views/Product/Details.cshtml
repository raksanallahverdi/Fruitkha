@using Presentation.Areas.Admin.Models.Product
@model ProductDetailsVM

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Name</h2>
        </div>
        <div class="card-body">
            <div class="product-details">
                <div class="form-group mb-4">
                    <label for="productName" class="font-weight-bold">Product Name</label>
                    <p id="productName" class="form-control-plaintext">@Model.Name</p>
                </div>

                <div class="form-group mb-4">
                    <label for="productDescription" class="font-weight-bold">Description</label>
                    <p id="productDescription" class="form-control-plaintext">@Model.Description</p>
                </div>

                <div class="form-group mb-4">
                    <label for="productPrice" class="font-weight-bold">Price</label>
                    <p id="productPrice" class="form-control-plaintext">@Model.Price $</p>
                </div>

                <div class="form-group mb-4">
                    <label for="productStock" class="font-weight-bold">Stock Quantity</label>
                    <p id="productStock" class="form-control-plaintext">@Model.StockQuantity</p>
                </div>

                <div class="form-group mb-4">
                    <label for="productType" class="font-weight-bold">Product Type</label>
                    <p id="productType" class="form-control-plaintext">@Model.ProductType</p>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="btn btn-secondary">Back to Product List</a>
                    <a href="@Url.Action("Edit", "Product", new { id = Model.Id, area = "Admin" })" class="btn btn-warning">Edit Product</a>
                </div>
            </div>
        </div>
    </div>
</div>
